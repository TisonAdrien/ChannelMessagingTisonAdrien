    <fragment
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:name="adrien.tisonad.channelmessaging.Fragment.ChannelListFragmentActivity"
        android:id="@+id/fragmentA_ID"
        tools:layout="@layout/channel_list_fragment" />

    <fragment
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:name="adrien.tisonad.channelmessaging.Fragment.MessageFragment"
        android:id="@+id/fragmentB_ID"
        android:layout_gravity="center_vertical"
        tools:layout="@layout/message_fragment" />
